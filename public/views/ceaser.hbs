<div class="everythingBox">
    <p>&nbsp;</p>
    <div class="shiftInput">
        <div class="labelAndErase">
            <legend><strong>Shift</strong></legend>
            <button class="eraseBtn" onclick="document.getElementById('shiftInputText').value = ''">X</button>
        </div>
        <form id="shiftInputMessage" method="POST" action="/shiftInput-message-form">
            <fieldset class="fields">
                <input type="number" class="message" id="shiftInputText">
            </fieldset>
        </form>    
    </div>


    <div class="conversions">
        <p>&nbsp;</p>
        <div class="Message">
            <div class="labelAndErase">
                <legend><strong>Message</strong></legend>
                <button class="eraseBtn" onclick="document.getElementById('ceaserInputText').value = ''">X</button>
            </div>
            <form id="ceaserInput" method="POST" action="/submit-ceaser-form"> 
                <fieldset class="fields">
                    <textarea class="message" id="ceaserInputText" cols="30" rows="10"></textarea>
                </fieldset>
            </form>    
        </div>

        <input class="translateBtn" type="submit" id="submitShift" value="Convert">

        <div class="output">
            <div class="labelAndErase">
                <legend><strong>Encoded</strong></legend>
                <button class="eraseBtn" onclick="document.getElementById('ceaserOutputText').value = ''">X</button>
            </div>
            <form id="ceaserOutput" method="" action="/encoded-ceaser-form">
                <fieldset class="fields">
                    <textarea class="message" id="ceaserOutputText" cols="30" rows="10"></textarea>
                </fieldset> 
            </form>    
        </div>
    </div>

</div>